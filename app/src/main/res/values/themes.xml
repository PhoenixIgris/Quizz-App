<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Quizz" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">#512DA8</item>
        <item name="colorPrimaryVariant">#4527A0</item> <!-- Variant of the primary color -->
        <item name="colorOnPrimary">#FFFFFF</item> <!-- Text color on primary background -->

        <!-- Secondary Colors -->
        <item name="colorSecondary">#26A69A</item>
        <item name="colorSecondaryVariant">#009688</item> <!-- Variant of the secondary color -->
        <item name="colorOnSecondary">#000000</item> <!-- Text color on secondary background -->
        <!-- Status Bar Color -->
        <item name="android:statusBarColor">@android:color/transparent
        </item> <!-- Color for the status bar -->
        <item name="android:navigationBarColor">@android:color/transparent
        </item> <!-- Color for the status bar -->

        <!-- Other Colors -->

    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.BottomNav" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">#4527A0</item>
        <item name="colorOnPrimary">#000</item>
    </style>


    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxBackgroundColor">@color/text_input_background</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="Theme.Quizz.ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
        <item name="android:paddingVertical">14dp</item>
    </style>
</resources>