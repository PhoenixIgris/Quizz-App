<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:elevation="10dp"
        android:rotation="-30"
        android:src="@drawable/random"
        app:layout_constraintBottom_toTopOf="@+id/quiz_cat_card"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/quiz_cat_card"
        app:layout_constraintHorizontal_bias="0.80"
        app:layout_constraintStart_toStartOf="@+id/quiz_cat_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent="0.3" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/quiz_cat_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:backgroundTint="@color/blue_200">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <ImageView
                android:id="@+id/quiz_cat_status_IV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/quiz_cat_easy_status_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/nunito"
                android:foreground="?attr/selectableItemBackground"
                android:letterSpacing="0.04"
                android:text="Easy"
                android:textColor="@color/gray_50"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/quiz_cat_status_IV" />

            <TextView
                android:id="@+id/quiz_cat_medium_status_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito"
                android:letterSpacing="0.04"
                android:text="Medium"
                android:textColor="@color/gray_50"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/quiz_cat_easy_status_TV"
                app:layout_constraintTop_toBottomOf="@+id/quiz_cat_status_IV" />

            <TextView
                android:id="@+id/quiz_cat_hard_status_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito"
                android:letterSpacing="0.04"
                android:text="Hard"
                android:textColor="@color/gray_50"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/quiz_cat_medium_status_TV"
                app:layout_constraintTop_toBottomOf="@+id/quiz_cat_status_IV" />


            <TextView
                android:id="@+id/quiz_cat_name_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:letterSpacing="0.05"
                android:text="Linux"
                android:textColor="@color/gray_50"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/quiz_cat_easy_status_TV" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>

