<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ui.others.SettingThingUpActivity">

    <com.phoenixigris.quizz.ui.customviews.LoadingView
        android:id="@+id/settingThingsUpAct_loading_progressBar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:src="@drawable/loading" />

    <TextView
        android:id="@+id/settingThingsUpAct_onGoingTask_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settingThingsUpAct_loading_progressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Loading your resources...."
        android:textColor="@color/black"
        android:textSize="20sp" />
</RelativeLayout>